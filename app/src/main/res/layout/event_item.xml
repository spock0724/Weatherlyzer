<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"> <!-- Add padding here -->

    <TextView
        android:id="@+id/eventTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingBottom="4dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/eventLocationTextView"
        app:layout_constraintStart_toStartOf="@+id/eventLocationTextView"
        app:layout_constraintTop_toTopOf="parent" /> <!-- Add padding here -->
    android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/eventLocationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:paddingBottom="4dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventTitleTextView" /> <!-- Add padding here -->
    android:textColor="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/eventDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:paddingBottom="4dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/eventTitleTextView"
        app:layout_constraintTop_toBottomOf="@+id/eventLocationTextView"
        />
    //app:layout_constraintEnd_toStartOf="@+id/eventTitleTextView"
    //app:layout_constraintStart_toStartOf="@+id/eventTitleTextView"
</androidx.constraintlayout.widget.ConstraintLayout>